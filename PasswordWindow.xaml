<Window x:Class="EngineeredProductsCatalog.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EngineeredProductsCatalog"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Введите пароль" Height="125" Width="175">
    <StackPanel Margin="8,0,8,0">
        <Label Padding="0,5,5,5">
            Пароль
        </Label>
        <PasswordBox Name="PasswordBoxPassword" Width="142" HorizontalAlignment="Left">
            
        </PasswordBox>

        <Button Name="ButtonOk" Margin="0,8,0,0" Width="80" HorizontalAlignment="Center" Height="28"
                Click="ButtonOk_Click">
            ОК
        </Button>
    </StackPanel>
</Window>
